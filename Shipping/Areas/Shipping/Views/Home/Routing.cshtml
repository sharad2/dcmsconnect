                            <a  href="#@Model.AtsDatesByBuilding.Values[i][j].HtmlId" @Highlight(Model.AtsDatesByBuilding.Values[i][j], Model.InitialGroup)>
                                @Html.DisplayFor(m => Model.AtsDatesByBuilding.Values[i][j].AtsDate)</a>
