        @Html.LabelFor(m => m.StartDate)
        <input id="tbStartDate" type="text" size="10" name="@Model.NameFor(m => m.StartDate)" data-calendar-img="@Links_Shipping.Areas.Shipping.Content.images.calendar_gif" />
        @Html.LabelFor(m => m.DcCancelDate)
