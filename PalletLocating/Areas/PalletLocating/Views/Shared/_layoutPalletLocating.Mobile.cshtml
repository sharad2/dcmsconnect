<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <link href="@Links_PalletLocating.Areas.PalletLocating.Content.PalletLocating_mobile_all_css" rel="stylesheet" type="text/css" />
    <link href="@Links_PalletLocating.Content.themes.Start1_10_0.jquery_ui_min_css" rel="stylesheet" type="text/css" />
</head>
<body onkeydown="window.event.keyCode == 124 && window.close()" onkeypress="OnBodyKeyPress()">
    <div style="position: absolute; right: 1mm; text-align: right; z-index: 100">
        <a href="@Url.Content("~")" accesskey="0">@PalletLocatingResource.Home</a>
        @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
        {
            <span>@PalletLocatingResource.Welcome
                @ViewContext.HttpContext.User.Identity.Name
            </span>
        }
    </div>
    <div id="outer">
        <div id="header">
            @*<h1>
                @ViewBag.Title</h1>
            <h2>
                @ViewBag.Subtitle</h2>*@
        </div>
        <div id="content">
         @if(Model != null)
    {
        @Html.Partial(MVC_PalletLocating.PalletLocating.Shared.Views._soundPartial, Model.Sound)
    }
            @RenderBody()
        </div>
        @if (HttpContext.Current.IsDebuggingEnabled)
        {
            <div class="ui-state-highlight" style="font-size: 1.4em">
                Debug Info: @Model.QueryCount Queries executed</div>
        }
    </div>
    <div class="ui-priority-secondary">
        @PalletLocatingResource.Exit_Message
    </div>
@*    @if (EclipseLibrary.Mvc.Controllers.MobileEmulation.IsEmulatingMobileDevice(ViewContext.Controller.ControllerContext))
    {
        <div class="ui-priority-secondary">
            <a href="@Url.Action(MVC_PalletLocating.PalletLocating.Home.Building(false))" style="font-size: 1.4em">
                Back to Desktop View</a>
        </div>
    }*@
    <script type="text/javascript">
        function OnBodyKeyPress() {
            // If key is pressed outside an input control, set focus to scan text box
            if (window.event.srcElement.id != 'scan' &&
                window.event.srcElement.tagName != 'INPUT') {
                var tbScan = document.getElementById('scan');
                tbScan.value = '';
                tbScan.focus();
            }
        }
        // Set focus to scan input box when the page loads
        var input = document.getElementById('scan');
        if (input) {
            input.focus();
        }
    </script>
</body>
</html>


