@model DcmsMobile.MainArea.Logon.GetNewPasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = @MVC_DcmsMobile.SharedViews.Views._layoutBootstrap;
}
<div class="container">
    <div class="page-header">
        <h1>Change Password</h1>
    </div>
    @using (Html.BeginForm(MVC_DcmsMobile.Logon.ChangePassword(), FormMethod.Post, new
{
    @class = "form-horizontal",
    role = "form"
}))
    {
        <div class="form-group">
            <label class="col-sm-2 control-label">Old Password</label>
            <div class="col-sm-10">
                   @Html.PasswordFor(m => m.OldPassword, new
   {
       onkeypress = "window.event.keyCode == 13 && tbNewPassword.focus();",
       @class = "form-control"
   })               
              
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">New password twice, then Enter:</label>
            <div class="col-sm-10">
                
                    @Html.PasswordFor(m => m.NewPassword, new
   {
       id = "tbNewPassword",
       onkeypress = "window.event.keyCode == 13 && tbConfirmPassword.focus();",
       @class = "form-control"
   })
                <br />
                @Html.PasswordFor(m => m.ConfirmPassword, new
       {
           id = "tbConfirmPassword",
           onkeypress = "window.event.keyCode == 13 && document.forms[0].submit();",
           @class = "form-control"
       })       
            </div>
        </div>
    }
</div>