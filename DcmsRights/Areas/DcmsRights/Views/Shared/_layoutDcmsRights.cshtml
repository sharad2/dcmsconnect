<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=9" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <link href="@Links_DcmsRights.Areas.DcmsRights.Content.DcmsRights_all_min_css" rel="stylesheet" type="text/css" />
    <link href="@Links_DcmsRights.Content.themes.Start1_10_0.jquery_ui_min_css" rel="stylesheet" type="text/css" />
    <script src="@Links_DcmsRights.Scripts.jquery_1_8_2_js"  type="text/javascript"></script>
    <script src="@Links_DcmsRights.Scripts.jquery_ui_1_10_0_js" type="text/javascript"></script>
</head>
<body>
    <div id="outer">
        <div id="header">
            <h1>
                @ViewBag.Title</h1>
            <h2>
                @ViewBag.Subtitle</h2>
        </div>
        <div id="menu">
            <ul>
                <li class="banner"><span>DCMS Rights</span></li>
                <li><a href="@Url.Content("~")" >DCMS Connect Home</a></li>
                @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                {
                    <li>@DcmsRightsResource.Welcome @ViewContext.HttpContext.User.Identity.Name</li>
                }
                @if (ViewContext.HttpContext.Trace.IsEnabled)
                {
                    <li><a href="@Url.Content("~/trace.axd")" target="trace" >Trace</a> </li>
                }
            </ul>
        </div>
        <div id="content">
            <div id="primaryContentContainer">
                <div id="primaryContent">
                    @Html.StatusSummary()
                    @Html.ValidationSummary()
                    @RenderBody()
                </div>
            </div>
            <div id="secondaryContent">
                <div>
                    @Html.ActionLink("DCMS Rights Home", MVC_DcmsRights.DcmsRights.Home.Index())
                </div>
                @RenderSection("sidebar", false)
            </div>
            <div class="clear">
            </div>
        </div>
        <div id="footer">
            <p>
                Copyright &copy; 2011 Eclipse Systems <a href="http://www.eclsys.com" target="_blank">
                    http://www.eclsys.com</a></p>
        </div>
    </div>
</body>
</html>
