    http://www.freecsstemplates.org
    Released for free under a Creative Commons Attribution 2.5 License
-->
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />  
    <link href="@Links_PieceReplenish.Areas.PieceReplenish.Content.PieceReplenish_mobile_all_css" rel="stylesheet" type="text/css" />
</head>
<body onkeydown="window.event.keyCode == 124 && window.close()" onload="OnBodyLoad(this)"
    onkeypress="OnBodyKeyPress()">
    @if (Model != null)
    {        
        @Html.Partial(MVC_PieceReplenish.PieceReplenish.Shared.Views._soundPartial, Model.Sound)
    }

    <h3>@ViewBag.Title</h3>
    <div>
        @RenderBody()
    </div>
    <div style="font-size: 0.8em">
        P2 to Exit <a href="@Url.Content("~")" accesskey="0">Home</a>  <span>Welcome
            @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
            {
                @ViewContext.HttpContext.User.Identity.Name
            }
        </span>
    </div>
    @RenderSection("scripts", false)
</body>
</html>
