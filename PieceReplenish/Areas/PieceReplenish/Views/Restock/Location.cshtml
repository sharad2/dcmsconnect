@model DcmsMobile.PieceReplenish.ViewModels.Restock.LocationViewModel
@{
    ViewBag.Title = "Carton " + @Model.CartonId + " VWH " + @Model.VwhId;
}
@using (Html.BeginForm(MVC_PieceReplenish.PieceReplenish.Restock.RestockCarton(), FormMethod.Post
))
{
    @Html.ValidationSummary()
    @Html.StatusSummary()
    <label>
        Location</label>
    <input type="text" id = "scan" style = "text-transform: uppercase" name="@MVC_PieceReplenish.PieceReplenish.Restock.RestockCartonParams.locationId" />
    <input type="hidden" name="@MVC_PieceReplenish.PieceReplenish.Restock.RestockCartonParams.cartonId" value="@Model.CartonId"/>
    <input type="hidden" name="@MVC_PieceReplenish.PieceReplenish.Restock.RestockCartonParams.lastLocationId" value="@Model.LastLocationId"/>
    <div>
        <strong>@Model.PiecesInCarton</strong> Pcs of <strong>@Model.SkuDisplayName (@Html.DisplayFor(m => m.SkuRetailPrice))</strong>
    </div>   
}
@Html.Partial(MVC_PieceReplenish.PieceReplenish.Restock.Views._locationSuggestionsPartial, Model.SuggestedLocations)
<span class="ui-state-active">Enter to Go Back. 
</span>
@section scripts {
    <script src="@Links_PieceReplenish.Areas.PieceReplenish.Scripts.PieceReplenish_js" type="text/javascript"></script>
}
